<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- single item functions: can select color(the check mark when selected) -->
    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/type_color"
        android:layout_margin="2sp"
        android:background="@drawable/item_drawable">

        <!-- the check marked item -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/selected_item"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_done_black_24dp"
            android:visibility="invisible"
            />

    </RelativeLayout>

    <!-- the textView part for every item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2sp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <!-- the title display part -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:id="@+id/single_item_title"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/single_item_date"
            android:layout_weight="1"
            android:gravity="center_vertical"/>

    </LinearLayout>



</LinearLayout>